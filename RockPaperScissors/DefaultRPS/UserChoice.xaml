<Window x:Class="RockPaperScissors.DefaultRPSUserChoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RockPaperScissors"
        mc:Ignorable="d"
        Title="DefaultRPSUserChoice" Height="450" Width="800">
    <Grid>
        <Label Content="Pick one" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="72"/>
        <Button x:Name="RockButton" Content="Rock" Margin="10,217,556,155" Click="RockButton_Click"/>
        <Button x:Name="PaperButton" Content="Paper" Margin="283,217,283,155"/>
        <Button x:Name="ScissorsButton" Content="Paper" Margin="556,217,10,155"/>

    </Grid>
</Window>
