<Window x:Class="RockPaperScissorsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RockPaperScissorsApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Pick one" FontSize="72" Margin="260,10,260,312"/>
        <Button x:Name="RockButton" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="48"/>
        <Button x:Name="ScissorsButton" Content="Scissors" HorizontalAlignment="Left" Margin="621,215,0,0" VerticalAlignment="Top" FontSize="48" Click="ScissorsButton_Click"/>
        <Button x:Name="RockButton1" Content="Rock" HorizontalAlignment="Left" Margin="19,215,0,0" VerticalAlignment="Top" FontSize="48" Click="RockButton1_Click"/>
        <Button x:Name="PaperButton" Content="Paper" HorizontalAlignment="Center" Margin="0,215,0,0" VerticalAlignment="Top" FontSize="48" Click="PaperButton_Click"/>
    </Grid>
</Window>
